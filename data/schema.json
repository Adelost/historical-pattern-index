{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "status": {
      "type": "string",
      "enum": ["historic", "ongoing", "disputed"],
      "default": "historic"
    },
    "period": {
      "type": "object",
      "properties": {
        "start": { "type": "integer" },
        "end": { "type": "integer" }
      },
      "required": ["start", "end"]
    },
    "geography": {
      "type": "object",
      "properties": {
        "region": { "type": "string" },
        "coordinates": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "participants": {
      "type": "object",
      "properties": {
        "perpetrators": { "type": "array", "items": { "type": "string" } },
        "victims": { "type": "array", "items": { "type": "string" } }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "mortality": {
          "type": "object",
          "properties": {
            "min": { "type": "integer" },
            "max": { "type": "integer" },
            "population_initial": { "type": "integer" },
            "population_loss_percent": { "type": "number" },
            "confidence": { "type": "string", "enum": ["low", "medium", "high"] }
          },
          "required": ["min", "max", "population_loss_percent"]
        },
        "scores": {
          "type": "object",
          "properties": {
            "systematic_intensity": { "type": "integer" },
            "profit": { "type": "integer" },
            "ideology": { "type": "integer" },
            "complicity": { "type": "integer" }
          },
          "required": ["systematic_intensity", "profit", "ideology", "complicity"]
        },
        "breakdowns": {
          "type": "object",
          "properties": {
            "systematic_intensity": {
              "type": "object",
              "properties": {
                "policy": { "type": "boolean" },
                "state_involvement": { "type": "boolean" },
                "infrastructure": { "type": "boolean" },
                "propaganda": { "type": "boolean" },
                "broad_targeting": { "type": "boolean" },
                "cultural_ban": { "type": "boolean" },
                "property_seizure": { "type": "boolean" },
                "identification": { "type": "boolean" },
                "biological_warfare": { "type": "boolean" },
                "duration_over_5y": { "type": "boolean" }
              },
              "required": ["policy", "state_involvement", "infrastructure"]
            },
            "profit": {
              "type": "object",
              "properties": {
                "direct_revenue": { "type": "boolean" },
                "resource_extraction": { "type": "boolean" },
                "forced_labor": { "type": "boolean" },
                "economic_dependence": { "type": "boolean" },
                "market_integration": { "type": "boolean" }
              },
              "required": ["direct_revenue", "resource_extraction", "forced_labor"]
            },
            "ideology": {
              "type": "object",
              "properties": {
                "purity_ideal": { "type": "boolean" },
                "historical_claim": { "type": "boolean" },
                "higher_purpose": { "type": "boolean" },
                "victim_narrative": { "type": "boolean" },
                "utopianism": { "type": "boolean" }
              },
              "required": ["purity_ideal", "historical_claim"]
            },
            "complicity": {
              "type": "object",
              "properties": {
                "distance": { "type": "boolean" },
                "benefit": { "type": "boolean" },
                "euphemisms": { "type": "boolean" },
                "diffused_responsibility": { "type": "boolean" },
                "silence": { "type": "boolean" }
              },
              "required": ["distance", "benefit", "euphemisms"]
            }
          },
          "required": ["systematic_intensity", "profit", "ideology", "complicity"]
        }
      },
      "required": ["mortality", "scores", "breakdowns"]
    },
    "tags": { "type": "array", "items": { "type": "string" } },
    "analysis": {
      "type": "object",
      "properties": {
        "tier": { "type": "string" },
        "pattern_note": { "type": "string" }
      }
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "author": { "type": "string" },
          "year": { "type": "integer" }
        },
        "required": ["title", "author"]
      }
    }
  },
  "required": ["id", "name", "status", "period", "metrics", "sources"]
}
