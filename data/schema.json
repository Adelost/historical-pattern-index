{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "status": {
      "type": "string",
      "enum": ["historic", "ongoing", "disputed"],
      "default": "historic"
    },
    "period": {
      "type": "object",
      "properties": {
        "start": { "type": "integer" },
        "end": { "type": "integer" }
      },
      "required": ["start", "end"]
    },
    "geography": {
      "type": "object",
      "properties": {
        "region": { "type": "string" },
        "coordinates": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 2,
          "maxItems": 2
        }
      },
      "required": ["region"]
    },
    "participants": {
      "type": "object",
      "properties": {
        "perpetrators": { "type": "array", "items": { "type": "string" } },
        "victims": { "type": "array", "items": { "type": "string" } }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "mortality": {
          "type": "object",
          "properties": {
            "min": { "type": "integer", "minimum": 0 },
            "max": { "type": "integer", "minimum": 1 },
            "population_initial": { "type": "integer", "minimum": 1 },
            "population_loss_percent": { "type": "number", "minimum": 0, "maximum": 100 },
            "confidence": { "type": "string", "enum": ["low", "medium", "high"] }
          },
          "required": ["min", "max", "population_initial", "population_loss_percent"]
        },
        "scores": {
          "type": "object",
          "properties": {
            "systematic_intensity": { "type": "integer", "minimum": 0, "maximum": 100 },
            "profit": { "type": "integer", "minimum": 0, "maximum": 100 },
            "ideology": { "type": "integer", "minimum": 0, "maximum": 100 },
            "complicity": { "type": "integer", "minimum": 0, "maximum": 100 }
          },
          "required": ["systematic_intensity", "profit", "ideology", "complicity"]
        },
        "breakdowns": {
          "type": "object",
          "properties": {
            "systematic_intensity": {
              "type": "object",
              "additionalProperties": { "type": "boolean" }
            }
          },
          "required": ["systematic_intensity"]
        }
      },
      "required": ["mortality", "scores", "breakdowns"]
    },
    "tags": { "type": "array", "items": { "type": "string" } },
    "denial_status": {
      "type": "string",
      "enum": ["acknowledged", "partial", "disputed", "denied", "suppressed"],
      "description": "How the event is recognized by perpetrator state/successors: acknowledged (fully), partial (some recognition), disputed (contested facts), denied (rejected), suppressed (censored/hidden)"
    },
    "analysis": {
      "type": "object",
      "properties": {
        "tier": { "type": "string" },
        "pattern_note": { "type": "string" }
      },
      "required": ["tier", "pattern_note"]
    },
    "erasure_note": {
      "type": "string",
      "description": "Optional. Documents destruction beyond mortality: languages lost, cultural sites destroyed, ecosystems eliminated as part of the same atrocity."
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "author": { "type": "string" },
          "year": { "type": "integer" }
        },
        "required": ["title", "author"]
      }
    }
  },
  "required": ["id", "name", "status", "period", "metrics", "analysis", "sources"]
}